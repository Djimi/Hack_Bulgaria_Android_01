<?xml version="1.0" encoding="utf-8"?>

<set xmlns:android="http://schemas.android.com/apk/res/android">

    <objectAnimator
        android:valueFrom="0"
        android:valueTo="1"
        android:duration="@integer/half_animation_duration"
        android:propertyName="alpha"/>

    <objectAnimator
        android:valueFrom="2"
        android:valueTo="1"
        android:duration="@integer/half_animation_duration"
        android:propertyName="scaleX"/>

    <objectAnimator
        android:valueFrom="2"
        android:valueTo="1"
        android:duration="@integer/half_animation_duration"
        android:propertyName="scaleY"/>
</set>