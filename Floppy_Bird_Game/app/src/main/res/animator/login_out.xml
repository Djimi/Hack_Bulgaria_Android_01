<?xml version="1.0" encoding="utf-8"?>

<set android:interpolator="@android:interpolator/accelerate_decelerate" xmlns:android="http://schemas.android.com/apk/res/android">

    <objectAnimator
        android:valueFrom="1.0"
        android:valueTo="0.0"
        android:propertyName="alpha"
        android:duration="@integer/animation_duration"/>

    <objectAnimator
        android:valueFrom="0"
        android:valueTo="1440"
        android:propertyName="rotation"
        android:duration="@integer/animation_duration"/>



    <objectAnimator
        android:valueFrom="1"
        android:valueTo="0"
        android:propertyName="scaleX"
        android:duration="@integer/animation_duration"/>


    <objectAnimator
        android:valueFrom="1"
        android:valueTo="0"
        android:propertyName="scaleY"
        android:duration="@integer/animation_duration"/>

    <objectAnimator

        android:valueTo="300"
        android:propertyName="translationX"
        android:duration="@integer/half_animation_duration"/>

    <objectAnimator

        android:valueTo="100"
        android:propertyName="translationY"
        android:duration="@integer/half_animation_duration"/>

    <objectAnimator

        android:valueTo="-500"
        android:propertyName="translationX"
        android:duration="@integer/half_animation_duration"
        android:startOffset="@integer/half_animation_duration"/>

    <objectAnimator

        android:valueTo="100"
        android:propertyName="translationY"
        android:duration="@integer/half_animation_duration"
        android:startOffset="@integer/half_animation_duration"/>
</set>