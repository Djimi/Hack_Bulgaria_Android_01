<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/diabloButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="diablo_vs_imperius.mp4"/>

    <Button
        android:id="@+id/obichamButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="obicham.mp4"/>

    <Button
        android:id="@+id/parkingGeniusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parkingGenius.mp4"/>

    <Button
        android:id="@+id/pennyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="penny.mp4"/>

    <ProgressBar
        android:id="@+id/diabloProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"/>


    <ProgressBar
        android:id="@+id/obichamProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"/>

    <ProgressBar
        android:id="@+id/parkingGeniusProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"/>

    <ProgressBar
        android:id="@+id/pennyProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"/>

</LinearLayout>
